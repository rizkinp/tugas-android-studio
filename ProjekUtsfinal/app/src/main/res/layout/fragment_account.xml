<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_akun"
    android:gravity="center_horizontal|center_vertical">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="@drawable/round_image"
        android:src="@drawable/ic_app_new" />

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Rizki Nur Pratama"

        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="rizkinp87@gmail.com"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/gender_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Laki-laki"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/education_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gender_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Mahasiswa"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/button_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/education_status_tv"
        android:paddingTop="25dp"
        android:text="LOGOUT"
        android:textStyle="bold"
        android:textColor="#B80FA1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textSize="16sp" />

</RelativeLayout>